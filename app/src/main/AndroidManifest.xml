<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gavinmccoy.festivalsie" >



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BrowseByDateAndLocationActivity"
            android:label="@string/title_activity_browse_by_date_and_location"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".BrowseByDateAndLocationDetails"
            android:label="@string/title_activity_browse_by_date_and_location_details"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SearchFestivals"
            android:label="@string/title_search_festivals"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".SearchFestivalsDetails"
            android:label="@string/title_search_festivals_details"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".FindFestivalsByArtist"
            android:label="@string/title_activity_find_festivals_by_artist"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".FindFestivalsByArtistDetails"
            android:label="@string/title_activity_find_festivals_by_artist_details"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".GigRecommender"
            android:label="@string/title_activity_gig_recommender"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".GigRecommenderDetails"
            android:label="@string/title_activity_gig_recommender_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ArtistGigography"
            android:label="@string/title_activity_artist_gigography"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ArtistGigographyDetails"
            android:label="@string/title_activity_artist_gigography_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".UpcomingFestivalsDetails"
            android:label="@string/title_activity_artist_gigography_details"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".SetList"
            android:label="@string/setList"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>


        <service android:name="com.example.musicplayer.MusicService" />
    </application>



    <!-- Permission to access internet -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!--
    The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
    Google Maps Android API v2, but are recommended.
    -->

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>


    <uses-permission android:name="android.permission.WAKE_LOCK" />


</manifest>
